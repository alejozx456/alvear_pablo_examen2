<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPAAV">

    <TextView
        android:id="@+id/IdButtonLoginIngresarPAAV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SISTEMA DE FACTURA"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="@+id/IdButtonLoginIngresarPAAV"
        app:layout_constraintTop_toBottomOf="@+id/IdButtonLoginIngresarPAAV" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Password"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/IdEmailPersonaPAAV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/IdButtonLoginIngresarPAAV" />

    <EditText
        android:id="@+id/IdPasswordPersonaPAAV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/IdEmailPersonaPAAV" />

    <Button
        android:id="@+id/button"
        android:layout_width="133dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="52dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="@+id/IdPasswordPersonaPAAV"
        app:layout_constraintTop_toBottomOf="@+id/IdPasswordPersonaPAAV" />
</androidx.constraintlayout.widget.ConstraintLayout>